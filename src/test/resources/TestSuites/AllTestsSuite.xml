<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Regression Suite" parallel="tests" thread-count="3">

    <test name="Valid Login Test">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="automation.Tests.login.LoginTests">
                <methods>
                    <include name="PostiveLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Login With Invalid Username Test">
        <parameter name="browser" value="chrome"></parameter>
        <parameter name="testKey" value="invalid-login-username"/>
        <classes>
            <class name="automation.Tests.login.LoginTests">
                <methods>
                    <include name="NegativeLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>

